library fuchsia.hardware.midi;

/// Describes what type of MIDI device an implementation of Device represents
enum Direction : uint8 {
    /// A MIDI source
    SOURCE = 1;
    /// A MIDI sink
    SINK = 2;
};

protocol Device {
    /// Get direction of the MIDI device
    GetDirection() -> (Direction direction);
};
